{
  "manifest_version": 2,

  "name": "Better Bookmark Button",
  "description": "Button and popup to quickly add bookmarks to any category.",
  "version": "1.2",
  "author": "Szymon Pilkowski",
  "homepage_url": "http:/twitter.com/ard",

  "background": {
    "page": "init.html"
  },

  "browser_action": {
    "default_icon": {
      "19": "bookmark.png",
      "38": "bookmark.png"
    },
    "default_title": "Better Bookmark Button",
    "default_popup": "background.html"
  },

  "permissions": [
    "bookmarks",
    "tabs"
  ]
}